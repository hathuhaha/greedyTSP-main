{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "${fileDirname}",
      // Phải khớp với ${fileDirname}\\main.exe trong tasks.json
      "program": "${fileDirname}/main.exe", 
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      // Phải khớp chính xác 100% với 'label' trong tasks.json
      "preLaunchTask": "Build Project (All Files)", 
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}